{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "The Terrorist Incidents in the U.S.(2017)",
    "width": 800,
    "height": 600,
    "projection": {"type": "albersUsa"},
    "data": {
    "url": "https://raw.githubusercontent.com/HongnuoLyu/3179-testrepo/main/cb_2018_us_state_20m.json",
    "format": {"type": "topojson", "feature": "cb_2018_us_state_20m"}
    },

      "layer":[
    {
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": {
          "field": "properties.NAME"
        }
      }
    },
  
  {"transform": [
{
"lookup": "properties.NAME",
"from": {
"data": {
"url": "https://raw.githubusercontent.com/HongnuoLyu/3179-testrepo/main/hww9.csv"
},
"key": "Row Labels",
"fields": ["Number of Terrorist Incidents", "Sum of Killed","Sum of Wounded"]
}
}
],
"mark": {"type": "geoshape", "stroke": "grey"},
"encoding": {
"color": {
"field":"Number of Terrorist Incidents" ,
"type": "quantitative",
"scale": {
            "type": "threshold",
            "domain": [1,3,5,7,9],
            "range": ["#fee5d9","#fcbba1"," #fc9272","#fb6a4a","#de2d26","#a50f15"]}},
"tooltip": [
{"field": "properties.NAME", "type": "nominal", "title": "Country"},
{"field": "Sum of Killed", "type": "quantitative"},
{"field": "Sum of Wounded", "type": "quantitative"}
]}}]}



